<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Bluetask.Views.PerformancePage"
    x:Name="root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Bluetask.Models"
    xmlns:viewmodels="using:Bluetask.ViewModels"
    xmlns:sys="using:System"
    xmlns:converters="using:Bluetask.Services.Converters"
    xmlns:controls="using:Bluetask.Views.Controls"
    mc:Ignorable="d"
    Background="{StaticResource App.GradientBackground}"
    RequestedTheme="Dark">

    <Page.Resources>
        <converters:HistoryToPointsConverter x:Key="HistoryToPointsConverter"/>
        <converters:CpuHistoryToPointsConverter x:Key="CpuHistoryToPointsConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
        <converters:PercentToScaleConverter x:Key="PercentToScaleConverter"/>
        <!-- Explicit templates for side cards to avoid cross-template bleed -->
        <DataTemplate x:Key="DiskSideCardTemplate" x:DataType="models:StorageInfo">
            <Grid Margin="0,0,0,12" Tapped="DiskCard_Tapped">
                <StackPanel Margin="6,0,0,0">
                    <TextBlock Text="{x:Bind CardTitle}" Foreground="{StaticResource App.StorageAccent}" FontWeight="SemiBold"/>
                    <TextBlock>
                        <Run Text="{x:Bind sys:String.Format('{0:F0}', Usage)}" FontSize="28" FontWeight="Bold" Foreground="White"/>
                        <Run Text="%" FontSize="20" Foreground="White"/>
                    </TextBlock>
                    <TextBlock Text="0 ms avg" Opacity="0.6"/>
                </StackPanel>
                <Rectangle HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="1.5"
                           Fill="{StaticResource App.StorageAccent}"
                           Opacity="{Binding IsSelected, Converter={StaticResource BoolToOpacityConverter}, ConverterParameter=0.6}"/>
            </Grid>
        </DataTemplate>

        <!-- Top (wide) disk card template without trailing divider to remove residual gap -->
        <DataTemplate x:Key="DiskSideCardTopTemplate" x:DataType="models:StorageInfo">
            <Grid Margin="0" Tapped="DiskCard_Tapped">
                <StackPanel Margin="6,0,0,0">
                    <TextBlock Text="{x:Bind CardTitle}" Foreground="{StaticResource App.StorageAccent}" FontWeight="SemiBold"/>
                    <TextBlock>
                        <Run Text="{x:Bind sys:String.Format('{0:F0}', Usage)}" FontSize="28" FontWeight="Bold" Foreground="White"/>
                        <Run Text="%" FontSize="20" Foreground="White"/>
                    </TextBlock>
                    <TextBlock Text="0 ms avg" Opacity="0.6"/>
                </StackPanel>
                <Rectangle HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="1.5"
                           Fill="{StaticResource App.StorageAccent}"
                           Opacity="{Binding IsSelected, Converter={StaticResource BoolToOpacityConverter}, ConverterParameter=0.6}"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="GpuSideCardTemplate" x:DataType="models:GpuInfo">
            <Grid Tapped="GpuCard_Tapped" Margin="0,0,0,12">
                <StackPanel Margin="6,0,0,0">
                    <TextBlock Text="{x:Bind CardTitle}" Foreground="{StaticResource App.GpuAccent}" FontWeight="SemiBold"/>
                    <TextBlock>
                        <Run Text="{x:Bind sys:String.Format('{0:F0}', Usage)}" FontSize="28" FontWeight="Bold" Foreground="White"/>
                        <Run Text="%" FontSize="20" Foreground="White"/>
                    </TextBlock>
                    <TextBlock Text="Utilization" Opacity="0.6"/>
                    <TextBlock Text="{x:Bind sys:String.Format('{0}Â°C', Temperature)}"/>
                    <Rectangle Height="1" Fill="#2A2C36" Margin="0,12,0,0"/>
                </StackPanel>
                <Rectangle HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="1.5"
                           Margin="0,0,0,13"
                           Fill="{StaticResource App.GpuAccent}"
                           Opacity="{Binding IsSelected, Converter={StaticResource BoolToOpacityConverter}, ConverterParameter=0.6}"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="256"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar: extend background up into custom title bar area to remove top gap -->
        <Border Grid.Column="0" 
                Background="{StaticResource App.CardGradientBrush}"
                BorderBrush="{StaticResource App.CardBorder}"
                BorderThickness="0,0,1,0"
                Margin="0,-34,0,0"
                Padding="0,34,0,0">
            <StackPanel>
                <Border Padding="16,0,16,16" BorderThickness="0,0,0,1" BorderBrush="#2A2C36">
                    <StackPanel>
                        <TextBlock Text="Performance" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="System components" FontSize="12" Foreground="White" Opacity="0.6"/>
                    </StackPanel>
                </Border>

                <ListView ItemsSource="{x:Bind ViewModel.SidebarItems, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedSidebarItem, Mode=TwoWay}"
                          SelectionMode="Single"
                          Background="Transparent"
                          BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:SidebarItem">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="32" Height="32" CornerRadius="8" Background="{x:Bind IconBackgroundBrush, Mode=OneWay}" VerticalAlignment="Center">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="{x:Bind IconGlyph, Mode=OneWay}" Foreground="White"/>
                                </Border>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind Name, Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                    <TextBlock Text="{x:Bind Subtext, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.6"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="{x:Bind ValueText, Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="16,12"/>
                            <Setter Property="Margin" Value="16,8,16,0"/>
                            <Setter Property="Background" Value="#1E2736"/>
                            <Setter Property="BorderBrush" Value="#2A2C36"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="MinHeight" Value="0"/>
                            <Setter Property="CornerRadius" Value="8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="Root"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="{TemplateBinding CornerRadius}">
                                            <ContentPresenter x:Name="ContentPresenter"
                                                              ContentTransitions="{TemplateBinding ContentTransitions}"
                                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                                              Content="{TemplateBinding Content}"
                                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                              Padding="{TemplateBinding Padding}"/>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal">
                                                        <VisualState.Setters>
                                                            <Setter Target="Root.Background" Value="{StaticResource App.CardBackground}"/>
                                                            <Setter Target="Root.BorderBrush" Value="{StaticResource App.CardBorder}"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="PointerOver">
                                                        <VisualState.Setters>
                                                            <Setter Target="Root.Background" Value="#232E3F"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="Pressed">
                                                        <VisualState.Setters>
                                                            <Setter Target="Root.Background" Value="#1C2433"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="Selected">
                                                        <VisualState.Setters>
                                                            <Setter Target="Root.Background" Value="{Binding DataContext.SelectedBackgroundBrush, ElementName=ContentPresenter}"/>
                                                            <Setter Target="Root.BorderBrush" Value="{Binding DataContext.SelectedBorderBrush, ElementName=ContentPresenter}"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="SelectedPointerOver">
                                                        <VisualState.Setters>
                                                            <Setter Target="Root.Background" Value="{Binding DataContext.SelectedBackgroundBrush, ElementName=ContentPresenter}"/>
                                                            <Setter Target="Root.BorderBrush" Value="{Binding DataContext.SelectedBorderBrush, ElementName=ContentPresenter}"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="SelectedPressed">
                                                        <VisualState.Setters>
                                                            <Setter Target="Root.Background" Value="{Binding DataContext.SelectedBackgroundBrush, ElementName=ContentPresenter}"/>
                                                            <Setter Target="Root.BorderBrush" Value="{Binding DataContext.SelectedBorderBrush, ElementName=ContentPresenter}"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="24,0,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="{x:Bind ViewModel.SelectedSidebarItem.Name, Mode=OneWay}" 
                           FontSize="32" 
                           FontWeight="SemiBold" 
                           Foreground="White"/>
                <TextBlock Text="{x:Bind ViewModel.SelectedSubtitle, Mode=OneWay}" 
                           FontSize="16" 
                           Foreground="White" 
                           Opacity="0.7"
                           Margin="0,8,0,0"
                           Visibility="{x:Bind ViewModel.IsMemorySelected, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}"/>
                <TextBlock Text="{x:Bind ViewModel.Ram.DisplayName, Mode=OneWay}" 
                           FontSize="14"
                           Foreground="White"
                           Opacity="0.7"
                           Margin="0,8,0,0"
                           Visibility="{x:Bind ViewModel.IsMemorySelected, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
            </StackPanel>

            <!-- Chart and Stats Area -->
            <Grid x:Name="CpuSection" Grid.Row="1" x:Load="{x:Bind ViewModel.IsCpuSelected, Mode=OneWay}" Visibility="{x:Bind ViewModel.IsCpuSelected, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left: Chart or Per-core grid -->
                <Border Grid.Column="0" Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1" Margin="0,0,16,0">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header: % Utilization / 60 seconds -->
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="% Utilization" FontSize="12" Foreground="White" Opacity="0.6"/>
                            <TextBlock Grid.Column="1" Text="60 seconds" FontSize="12" Foreground="White" Opacity="0.6"/>
                        </Grid>

                        <!-- Overall chart when toggle off -->
                        <Grid Grid.Row="1" Visibility="{x:Bind ViewModel.IsCpuPerCore, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}">
                            <controls:PerformanceChart
                                Values="{x:Bind ViewModel.ChartHistory, Mode=OneWay}"
                                LineBrush="{StaticResource App.CpuAccent}"
                                FillBrush="{StaticResource App.CpuAccent}"
                                FillOpacity="0.18"
                                GridLineBrush="#26FFFFFF"
                                GridVerticalLines="6"
                                GridHorizontalLines="3"
                                MaxValue="100"
                                />
                            <!-- Y-axis labels -->
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisTop, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisMid, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,10">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisBottom, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                        </Grid>

                        <!-- Per-core grid when toggle on -->
                        <Grid x:Name="CpuCoreContainer" Grid.Row="1" Visibility="{x:Bind ViewModel.IsCpuPerCore, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" SizeChanged="CpuCoreContainer_SizeChanged">
                            <ItemsControl x:Name="CpuCoreItems" ItemsSource="{x:Bind ViewModel.CpuCores, Mode=OneWay}" Loaded="CpuCoreItems_Loaded">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapGrid Orientation="Horizontal" ItemWidth="120" ItemHeight="84"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Margin" Value="10,6,10,12"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="models:CpuCoreInfo">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Border CornerRadius="6" BorderBrush="#2A2C36" BorderThickness="1" Background="{StaticResource App.CardGradientBrush}" Padding="6">
                                                <Border Background="{StaticResource App.CpuAccent}"
                                                        Opacity="0.85"
                                                        CornerRadius="4"
                                                        VerticalAlignment="Stretch"
                                                        RenderTransformOrigin="0.5,1">
                                                    <Border.RenderTransform>
                                                        <ScaleTransform ScaleY="{Binding Usage, Converter={StaticResource PercentToScaleConverter}}"/>
                                                    </Border.RenderTransform>
                                                </Border>
                                            </Border>
                                            <TextBlock Grid.Row="1" HorizontalAlignment="Center" Margin="0,6,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" TextTrimming="CharacterEllipsis">
                                                <Run Text="{x:Bind Label}"/>
                                                <Run Text=" "/>
                                                <Run Text="{x:Bind sys:String.Format('{0:F0}%', Usage)}"/>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- Right: Utilization and Stats stacked -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1" Grid.Row="0" Margin="0,0,0,16" Width="220">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" HorizontalAlignment="Left">
                                <Run Text="{x:Bind sys:String.Format('{0:F0}', ViewModel.Cpu.Usage), Mode=OneWay}"
                                     FontSize="64"
                                     FontWeight="Bold"
                                     Foreground="White"/>
                                <Run Text="%"
                                     FontSize="48"
                                     FontWeight="Bold"
                                     Foreground="White"/>
                            </TextBlock>
                            <TextBlock Grid.Row="1"
                                       Text="{x:Bind sys:String.Format('{0:F2} GHz', ViewModel.Cpu.CurrentClockGhz), Mode=OneWay}"
                                       FontSize="16"
                                       Foreground="{StaticResource App.CpuAccent}"
                                       HorizontalAlignment="Left"
                                       Margin="0,8,0,0"/>
                        </Grid>
                    </Border>

                    <Border Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1" Grid.Row="1" VerticalAlignment="Stretch" Width="220">
                        <Grid Margin="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Power -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,8">
                                <TextBlock Text="Power" FontSize="12" Foreground="White" Opacity="0.6"/>
                                <TextBlock Text="{x:Bind sys:String.Format('{0:F1} W', ViewModel.Cpu.PowerWatts), Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>

                            <!-- Voltage -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,8">
                                <TextBlock Text="Voltage" FontSize="12" Foreground="White" Opacity="0.6"/>
                                <TextBlock Text="{x:Bind sys:String.Format('{0:F2} V', ViewModel.Cpu.VoltageVolts), Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>

                            <!-- Processes -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,8">
                                <TextBlock Text="Processes" FontSize="12" Foreground="White" Opacity="0.6"/>
                                <TextBlock Text="{x:Bind ViewModel.ProcessCount, Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>

                            <!-- Threads -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,8">
                                <TextBlock Text="Threads" FontSize="12" Foreground="White" Opacity="0.6"/>
                                <TextBlock Text="{x:Bind sys:String.Format('{0:N0}', ViewModel.ThreadCount), Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>

                            <!-- Handles -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Handles" FontSize="12" Foreground="White" Opacity="0.6"/>
                                <TextBlock Text="{x:Bind sys:String.Format('{0:N0}', ViewModel.HandleCount), Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>

                            <!-- Up time -->
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="Up time" FontSize="12" Foreground="White" Opacity="0.6"/>
                                <TextBlock Text="{x:Bind ViewModel.UpTime, Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>

                            <!-- Toggle: Overall vs Per-core (bottom of card) -->
                            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" Spacing="0" Margin="0,8,0,0">
                                <TextBlock Text="Overall" FontSize="12" VerticalAlignment="Center" Foreground="White" Opacity="0.7" Margin="0,0,8,0"/>
                                <ToggleSwitch MinWidth="0" Margin="0" IsOn="{x:Bind ViewModel.IsCpuPerCore, Mode=TwoWay}" OnContent="" OffContent=""/>
                                <TextBlock Text="Per-Core" FontSize="12" VerticalAlignment="Center" Foreground="White" Opacity="0.7" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Memory Section -->
            <Grid x:Name="MemorySection" Grid.Row="1" x:Load="{x:Bind ViewModel.IsMemorySelected, Mode=OneWay}" Visibility="{x:Bind ViewModel.IsMemorySelected, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1" Margin="0,0,16,0">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="% Utilization" FontSize="12" Foreground="White" Opacity="0.6"/>
                            <TextBlock Grid.Column="1" Text="60 seconds" FontSize="12" Foreground="White" Opacity="0.6"/>
                        </Grid>
                        <Grid Grid.Row="1">
                            <controls:PerformanceChart
                                Values="{x:Bind ViewModel.ChartHistory, Mode=OneWay}"
                                LineBrush="{StaticResource App.RamAccent}"
                                FillBrush="{StaticResource App.RamAccent}"
                                FillOpacity="0.18"
                                GridLineBrush="#26FFFFFF"
                                GridVerticalLines="6"
                                GridHorizontalLines="3"
                                MaxValue="100"
                                />
                            <!-- Y-axis labels -->
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisTop, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisMid, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,10">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisBottom, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1" Grid.Row="0" Margin="0,0,0,16">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" HorizontalAlignment="Left">
                                <Run Text="{x:Bind sys:String.Format('{0:F0}', ViewModel.Ram.Usage), Mode=OneWay}" FontSize="64" FontWeight="Bold" Foreground="White"/>
                                <Run Text="%" FontSize="48" FontWeight="Bold" Foreground="White"/>
                            </TextBlock>
                            <TextBlock Grid.Row="1" Text="{x:Bind ViewModel.MemoryUsedAndTotal, Mode=OneWay}" FontSize="16" Foreground="{StaticResource App.RamAccent}" HorizontalAlignment="Left" Margin="0,8,0,0"/>
                        </Grid>
                    </Border>
                    <Border Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1" Grid.Row="1">
                        <Grid Margin="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,8">
                                <TextBlock Text="In use" FontSize="12" Foreground="White" Opacity="0.6"/>
                                <TextBlock Text="{x:Bind ViewModel.Ram.UsedOnly, Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,8">
                                <TextBlock Text="Available" FontSize="12" Foreground="White" Opacity="0.6"/>
                                <TextBlock Text="{x:Bind ViewModel.Ram.Available, Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Committed" FontSize="12" Foreground="White" Opacity="0.6"/>
                                <TextBlock Text="{x:Bind ViewModel.Ram.Committed, Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="Cached" FontSize="12" Foreground="White" Opacity="0.6"/>
                                <TextBlock Text="{x:Bind ViewModel.Ram.Cached, Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Disks Section (always shows side cards) -->
            <Grid x:Name="StorageSection"
                  Grid.Row="1"
                  x:Load="{x:Bind ViewModel.IsStorageSelected, Mode=OneWay}"
                  Visibility="{x:Bind ViewModel.IsStorageSelected, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1" Margin="0,0,16,0">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="% Active time" FontSize="12" Foreground="White" Opacity="0.6"/>
                            <TextBlock Grid.Column="1" Text="60 seconds" FontSize="12" Foreground="White" Opacity="0.6"/>
                        </Grid>
                        <Grid Grid.Row="1">
                            <controls:PerformanceChart
                                Values="{x:Bind ViewModel.ChartHistory, Mode=OneWay}"
                                LineBrush="{StaticResource App.StorageAccent}"
                                FillBrush="{StaticResource App.StorageAccent}"
                                FillOpacity="0.18"
                                GridLineBrush="#26FFFFFF"
                                GridVerticalLines="6"
                                GridHorizontalLines="3"
                                MaxValue="100"
                                />
                            <!-- Y-axis labels -->
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisTop, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisMid, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,10">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisBottom, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
                <!-- Right side cards for Disks: 3 modes
                     - Default vertical list when not special (ShowDefaultDriveList)
                     - 2x2 grid when exactly 4 drives
                     - 3-column wrap when odd and >=5 drives -->
                <Grid Grid.Column="1">
                    <!-- Default vertical list (when not 4 and not odd 5+) -->
                    <Border Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1" Width="148"
                            Visibility="{x:Bind ViewModel.ShowDefaultDriveList, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                        <StackPanel Margin="12,12,8,8">
                            <ItemsControl ItemsSource="{x:Bind ViewModel.Drives, Mode=OneWay}" ItemTemplate="{StaticResource DiskSideCardTemplate}"/>
                        </StackPanel>
                    </Border>

                    <!-- 2x2 grid when 4 drives -->
                    <Border Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1"
                            Visibility="{x:Bind ViewModel.HasFourDrives, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                        <Grid Margin="12,12,8,8">
                            <ItemsControl HorizontalAlignment="Center" ItemsSource="{x:Bind ViewModel.Drives, Mode=OneWay}" ItemTemplate="{StaticResource DiskSideCardTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="2" ItemWidth="112" ItemHeight="98"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Margin" Value="2,0,2,8"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>
                        </Grid>
                    </Border>

                    <!-- Odd 5+ drives layout:
                         - First drive (index 0) is rendered wide at the top
                         - Remaining drives are split into two vertical columns -->
                    <Border Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1"
                            Visibility="{x:Bind ViewModel.HasOddFiveOrMoreDrives, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                        <Grid Margin="12,12,8,8" RowSpacing="12" ColumnSpacing="12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- Wide first card spanning both columns (no extra frame) -->
                            <ContentControl Grid.Row="0" Grid.ColumnSpan="2"
                                            Content="{x:Bind ViewModel.TopDrive, Mode=OneWay}"
                                            ContentTemplate="{StaticResource DiskSideCardTopTemplate}"
                                            Margin="0"/>
                            <!-- Left column -->
                            <StackPanel Grid.Row="1" Grid.Column="0">
                                <ItemsControl ItemsSource="{x:Bind ViewModel.DrivesLeftColumn, Mode=OneWay}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="models:StorageInfo">
                                            <ContentControl Content="{Binding}" ContentTemplate="{StaticResource DiskSideCardTemplate}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            <!-- Right column -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="12,0,0,0">
                                <ItemsControl ItemsSource="{x:Bind ViewModel.DrivesRightColumn, Mode=OneWay}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="models:StorageInfo">
                                            <ContentControl Content="{Binding}" ContentTemplate="{StaticResource DiskSideCardTemplate}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            

            <!-- Network Section -->
            <Grid x:Name="NetworkSection" Grid.Row="1" x:Load="{x:Bind ViewModel.IsNetworkSelected, Mode=OneWay}" Visibility="{x:Bind ViewModel.IsNetworkSelected, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1" Margin="0,0,16,0">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Kbps" FontSize="12" Foreground="White" Opacity="0.6"/>
                            <TextBlock Grid.Column="1" Text="60 seconds" FontSize="12" Foreground="White" Opacity="0.6"/>
                        </Grid>
                        <Grid Grid.Row="1">
                            <controls:PerformanceChart
                                Values="{x:Bind ViewModel.ChartHistory, Mode=OneWay}"
                                LineBrush="{StaticResource App.NetworkAccent}"
                                FillBrush="{StaticResource App.NetworkAccent}"
                                FillOpacity="0.18"
                                GridLineBrush="#26FFFFFF"
                                GridVerticalLines="6"
                                GridHorizontalLines="3"
                                MaxValue="0"/>
                            <!-- Y-axis labels -->
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisTop, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisMid, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,10">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisBottom, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
                <Border Grid.Column="1" Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Margin="0,0,0,12">
                            <TextBlock Text="{x:Bind ViewModel.Network.UploadSpeed, Mode=OneWay}" FontSize="28" FontWeight="Bold"/>
                            <TextBlock Text="Kbps Sent" Opacity="0.6"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="{x:Bind ViewModel.Network.DownloadSpeed, Mode=OneWay}" FontSize="28" FontWeight="Bold"/>
                            <TextBlock Text="Kbps Received" Opacity="0.6"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- GPUs Section (always shows side cards) -->
            <Grid x:Name="GpuSection"
                  Grid.Row="1"
                  x:Load="{x:Bind ViewModel.IsGpuSelected, Mode=OneWay}"
                  Visibility="{x:Bind ViewModel.IsGpuSelected, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1" Margin="0,0,16,0">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="% Utilization" FontSize="12" Foreground="White" Opacity="0.6"/>
                            <TextBlock Grid.Column="1" Text="60 seconds" FontSize="12" Foreground="White" Opacity="0.6"/>
                        </Grid>
                        <Grid Grid.Row="1">
                            <controls:PerformanceChart
                                Values="{x:Bind ViewModel.ChartHistory, Mode=OneWay}"
                                LineBrush="{StaticResource App.GpuAccent}"
                                FillBrush="{StaticResource App.GpuAccent}"
                                FillOpacity="0.18"
                                GridLineBrush="#26FFFFFF"
                                GridVerticalLines="6"
                                GridHorizontalLines="3"
                                MaxValue="100"/>
                            <!-- Y-axis labels -->
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisTop, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisMid, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,10">
                                <TextBlock Text="{x:Bind ViewModel.ChartYAxisBottom, Mode=OneWay}" FontSize="12" Foreground="White" Opacity="0.5"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
                <!-- Right side cards for GPUs: switch to 2x2 grid when exactly 4 GPUs -->
                <Grid Grid.Column="1">
                    <!-- Default vertical list (not 4 GPUs) -->
                    <Border Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1" Width="148"
                            Visibility="{x:Bind ViewModel.HasFourGpus, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}">
                        <StackPanel Margin="12,12,8,8">
                            <ItemsControl ItemsSource="{x:Bind ViewModel.Gpus, Mode=OneWay}" ItemTemplate="{StaticResource GpuSideCardTemplate}"/>
                        </StackPanel>
                    </Border>

                    <!-- 2x2 grid when 4 GPUs -->
                    <Border Background="{StaticResource App.CardGradientBrush}" CornerRadius="8" BorderBrush="#2A2C36" BorderThickness="1"
                            Visibility="{x:Bind ViewModel.HasFourGpus, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                        <Grid Margin="12,12,8,8">
                            <ItemsControl HorizontalAlignment="Center" ItemsSource="{x:Bind ViewModel.Gpus, Mode=OneWay}" ItemTemplate="{StaticResource GpuSideCardTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="2" ItemWidth="112" ItemHeight="106"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Margin" Value="2,0,2,8"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            

            <!-- Bottom CPU Specs -->
            <Border Grid.Row="2" 
                    Background="{StaticResource App.CardGradientBrush}" 
                    CornerRadius="8"
                    BorderBrush="#2A2C36" 
                    BorderThickness="1"
                    Padding="24"
                    Margin="0,16,0,0"
                    Visibility="{x:Bind ViewModel.IsCpuSelected, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Base speed -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,24,16">
                        <TextBlock Text="Base speed" FontSize="14" Foreground="White" Opacity="0.7"/>
                        <TextBlock Text="4.7 GHz" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- Sockets -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,24,16">
                        <TextBlock Text="Sockets" FontSize="14" Foreground="White" Opacity="0.7"/>
                        <TextBlock Text="1" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- Cores -->
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,24,16">
                        <TextBlock Text="Cores" FontSize="14" Foreground="White" Opacity="0.7"/>
                        <TextBlock Text="12" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- Logical processors -->
                    <StackPanel Grid.Row="0" Grid.Column="3" Margin="0,0,0,16">
                        <TextBlock Text="Logical processors" FontSize="14" Foreground="White" Opacity="0.7"/>
                        <TextBlock Text="24" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- Virtualization -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,24,0">
                        <TextBlock Text="Virtualization" FontSize="14" Foreground="White" Opacity="0.7"/>
                        <TextBlock Text="Enabled" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- L1 cache -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,24,0">
                        <TextBlock Text="L1 cache" FontSize="14" Foreground="White" Opacity="0.7"/>
                        <TextBlock Text="768 KB" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- L2 cache -->
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,24,0">
                        <TextBlock Text="L2 cache" FontSize="14" Foreground="White" Opacity="0.7"/>
                        <TextBlock Text="12.0 MB" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- L3 cache -->
                    <StackPanel Grid.Row="1" Grid.Column="3" Margin="0,0,0,0">
                        <TextBlock Text="L3 cache" FontSize="14" Foreground="White" Opacity="0.7"/>
                        <TextBlock Text="64.0 MB" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Bottom Memory Specs -->
            <Border Grid.Row="2"
                    Background="{StaticResource App.CardGradientBrush}"
                    CornerRadius="8"
                    BorderBrush="#2A2C36"
                    BorderThickness="1"
                    Padding="24"
                    Margin="0,16,0,0"
                    Visibility="{x:Bind ViewModel.IsMemorySelected, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,24,0">
                        <TextBlock Text="Speed" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind ViewModel.Ram.Type, Mode=OneWay}" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="0,0,24,0">
                        <TextBlock Text="Slots used" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind ViewModel.Ram.SlotsUsedSummary, Mode=OneWay}" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="0,0,24,0">
                        <TextBlock Text="Form factor" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind ViewModel.Ram.FormFactor, Mode=OneWay}" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3">
                        <TextBlock Text="XMP/EXPO" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind ViewModel.Ram.XmpOrExpo, Mode=OneWay}" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Bottom Disks Specs (tighter vertical padding, moderate font sizes) -->
            <Border Grid.Row="2"
                    Background="{StaticResource App.CardGradientBrush}"
                    CornerRadius="8"
                    BorderBrush="#2A2C36"
                    BorderThickness="1"
                    Padding="24,10"
                    Margin="0,16,0,0"
                    Visibility="{x:Bind ViewModel.IsStorageSelected, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto" MaxHeight="220" Visibility="{x:Bind ViewModel.HasFiveOrMoreDrives, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                    <StackPanel>
                        <ItemsControl ItemsSource="{x:Bind ViewModel.Drives, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:StorageInfo">
                                    <StackPanel>
                                        <Grid ColumnSpacing="16" HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{x:Bind CardTitle}" Foreground="{StaticResource App.StorageAccent}" FontWeight="SemiBold" FontSize="14"/>
                                                <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" FontSize="14" TextWrapping="WrapWholeWords"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Brand" Opacity="0.7" FontSize="12"/>
                                                <TextBlock Text="{x:Bind Brand}" FontSize="14" TextWrapping="WrapWholeWords"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="Media" Opacity="0.7" FontSize="12"/>
                                                <TextBlock Text="{x:Bind MediaKind}" FontSize="14"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="3">
                                                <TextBlock Text="Capacity" Opacity="0.7" FontSize="12"/>
                                                <TextBlock Text="{x:Bind Capacity}" FontSize="14"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="4">
                                                <TextBlock Text="Type" Opacity="0.7" FontSize="12"/>
                                                <TextBlock Text="{x:Bind DriveType}" FontSize="14"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="5">
                                                <TextBlock Text="System disk" Opacity="0.7" FontSize="12"/>
                                                <TextBlock Text="{x:Bind IsSystemDisk}" FontSize="14"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="6">
                                                <TextBlock Text="Page file" Opacity="0.7" FontSize="12"/>
                                                <TextBlock Text="{x:Bind HasPageFile}" FontSize="14"/>
                                            </StackPanel>
                                        </Grid>
                                        <Rectangle Height="1" Fill="#2A2C36" Margin="0,8,0,8" Visibility="{x:Bind IsLast, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <!-- When less than 5 drives, keep non-scroll layout -->
                <StackPanel Visibility="{x:Bind ViewModel.HasFiveOrMoreDrives, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}">
                    <ItemsControl ItemsSource="{x:Bind ViewModel.Drives, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:StorageInfo">
                                <StackPanel>
                                    <Grid ColumnSpacing="16" HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1.2*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{x:Bind CardTitle}" Foreground="{StaticResource App.StorageAccent}" FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" FontSize="14" TextWrapping="WrapWholeWords"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Brand" Opacity="0.7" FontSize="12"/>
                                            <TextBlock Text="{x:Bind Brand}" FontSize="14" TextWrapping="WrapWholeWords"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Media" Opacity="0.7" FontSize="12"/>
                                            <TextBlock Text="{x:Bind MediaKind}" FontSize="14"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="3">
                                            <TextBlock Text="Capacity" Opacity="0.7" FontSize="12"/>
                                            <TextBlock Text="{x:Bind Capacity}" FontSize="14"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="4">
                                            <TextBlock Text="Type" Opacity="0.7" FontSize="12"/>
                                            <TextBlock Text="{x:Bind DriveType}" FontSize="14"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="5">
                                            <TextBlock Text="System disk" Opacity="0.7" FontSize="12"/>
                                            <TextBlock Text="{x:Bind IsSystemDisk}" FontSize="14"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="6">
                                            <TextBlock Text="Page file" Opacity="0.7" FontSize="12"/>
                                            <TextBlock Text="{x:Bind HasPageFile}" FontSize="14"/>
                                        </StackPanel>
                                    </Grid>
                                    <Rectangle Height="1" Fill="#2A2C36" Margin="0,8,0,8" Visibility="{x:Bind IsLast, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                </Grid>
            </Border>

            <!-- Bottom Network Specs -->
            <Border Grid.Row="2"
                    Background="{StaticResource App.CardGradientBrush}"
                    CornerRadius="8"
                    BorderBrush="#2A2C36"
                    BorderThickness="1"
                    Padding="24"
                    Margin="0,16,0,0"
                    Visibility="{x:Bind ViewModel.IsNetworkSelected, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,24,0">
                        <TextBlock Text="Connection type" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind ViewModel.Network.ConnectionType, Mode=OneWay}" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="0,0,24,0">
                        <TextBlock Text="Link speed" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind ViewModel.Network.LinkSpeed, Mode=OneWay}" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="0,0,24,0">
                        <TextBlock Text="IPv4 address" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind ViewModel.Network.Ipv4Address, Mode=OneWay}" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Status" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind ViewModel.Network.Status, Mode=OneWay}" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Bottom GPUs Specs (tighter vertical padding, moderate font sizes) -->
            <Border Grid.Row="2"
                    Background="{StaticResource App.CardGradientBrush}"
                    CornerRadius="8"
                    BorderBrush="#2A2C36"
                    BorderThickness="1"
                    Padding="24,10"
                    Margin="0,16,0,0"
                    Visibility="{x:Bind ViewModel.IsGpuSelected, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <StackPanel>
                    <ItemsControl ItemsSource="{x:Bind ViewModel.Gpus, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:GpuInfo">
                                <StackPanel>
                                    <Grid ColumnSpacing="16" HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1.2*"/>
                                            <ColumnDefinition Width="1.4*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{x:Bind CardTitle}" Foreground="{StaticResource App.GpuAccent}" FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" FontSize="14" TextWrapping="WrapWholeWords"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Video Memory" Opacity="0.7" FontSize="12"/>
                                            <TextBlock Text="{x:Bind Memory}" FontSize="14"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Driver version" Opacity="0.7" FontSize="12"/>
                                            <TextBlock Text="{x:Bind DriverVersion}" FontSize="14" TextWrapping="WrapWholeWords"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="3">
                                            <TextBlock Text="Driver Date" Opacity="0.7" FontSize="12"/>
                                            <TextBlock Text="{x:Bind DriverDate}" FontSize="14"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="4">
                                            <TextBlock Text="DirectX version" Opacity="0.7" FontSize="12"/>
                                            <TextBlock Text="{x:Bind DirectXVersion}" FontSize="14"/>
                                        </StackPanel>
                                    </Grid>
                                    <Rectangle Height="1" Fill="#2A2C36" Margin="0,8,0,8" Visibility="{x:Bind IsLast, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Page>



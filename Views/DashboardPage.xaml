<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Bluetask.Views.DashboardPage"
    x:Name="root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:models="using:Bluetask.Models"
    xmlns:viewmodels="using:Bluetask.ViewModels"
    xmlns:sys="using:System"
    xmlns:converters="using:Bluetask.Services.Converters"
    xmlns:local="using:Bluetask.Views"
    xmlns:win="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{StaticResource App.GradientBackground}"
    RequestedTheme="Dark">

    <Page.Resources>
        <converters:HistoryToPointsConverter x:Key="HistoryToPointsConverter"/>
        <LinearGradientBrush x:Key="ProcessRowBackgroundBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#1F2838" Offset="0"/>
            <GradientStop Color="#1A2434" Offset="1"/>
        </LinearGradientBrush>

        <!-- Converter for expand/collapse chevron -->
        <converters:BoolToChevronConverter x:Key="BoolToChevronConverter"/>
        <!-- Converter for inverse visibility -->
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <DataTemplate x:Key="LeafProcessTemplate" x:DataType="models:ProcessModel">
            <Grid Padding="12" Background="{StaticResource ProcessRowBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Image Source="{x:Bind Icon, Mode=OneWay}" Width="16" Height="16" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}" Grid.Column="1" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <TextBlock Text="{x:Bind CpuPercentDisplay, Mode=OneWay}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <TextBlock Text="{x:Bind MemoryDisplay, Mode=OneWay}" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <TextBlock Text="{x:Bind GpuPercentDisplayOrDash, Mode=OneWay}" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="5" VerticalAlignment="Center">
                    <Button Background="Transparent" BorderThickness="0" Click="OpenProcessLocationButton_Click" CommandParameter="{x:Bind}">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE721;"/>
                    </Button>
                    <Button Background="Transparent" BorderThickness="0" Click="KillProcessButton_Click" CommandParameter="{x:Bind}">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE711;"/>
                    </Button>
                </StackPanel>
            </Grid>
        </DataTemplate>


        
        <DataTemplate x:Key="ParentProcessTemplate" x:DataType="models:ProcessModel">
            <StackPanel>
                <!-- Parent row: slightly bolder text for the name, all columns aligned -->
                <Grid Padding="12" Background="{StaticResource ProcessRowBackgroundBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <!-- Expand/collapse button for processes with children -->
                    <Button x:Name="expandButton"
                            Grid.Column="0"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Width="16"
                            Height="16"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Click="ToggleExpandButton_Click"
                            CommandParameter="{x:Bind}"
                            Visibility="{x:Bind HasChildren, Mode=OneWay}">
                        <FontIcon FontFamily="Segoe Fluent Icons"
                                  Glyph="{x:Bind IsExpanded, Mode=OneWay, Converter={StaticResource BoolToChevronConverter}}"
                                  FontSize="10"/>
                    </Button>
                    <!-- Icon shown when no children -->
                    <Image Source="{x:Bind Icon, Mode=OneWay}"
                           Width="16"
                           Height="16"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Visibility="{x:Bind HasChildren, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                    <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}" Grid.Column="1" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="{x:Bind CpuPercentDisplay, Mode=OneWay}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="{x:Bind MemoryDisplay, Mode=OneWay}" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="{x:Bind GpuPercentDisplayOrDash, Mode=OneWay}" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="5" VerticalAlignment="Center">
                        <Button Background="Transparent" BorderThickness="0" Click="OpenProcessLocationButton_Click" CommandParameter="{x:Bind}">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE721;"/>
                        </Button>
                        <Button Background="Transparent" BorderThickness="0" Click="KillProcessButton_Click" CommandParameter="{x:Bind}">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE711;"/>
                        </Button>
                    </StackPanel>
                </Grid>
                <!-- Child rows: only indent the name, keep all stats aligned -->
                <ItemsControl ItemsSource="{x:Bind Children, Mode=OneWay}"
                              Visibility="{x:Bind IsExpanded, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:ProcessModel">
                            <Grid Padding="12" Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <!-- Empty column 0 to align with parent icon column -->
                                <Border Grid.Column="0" Width="16" Height="16"/>
                                <!-- Indent only the name in column 1 -->
                                <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}" Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                <!-- All stats columns aligned with headers -->
                                <TextBlock Text="{x:Bind CpuPercentDisplay, Mode=OneWay}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{x:Bind MemoryDisplay, Mode=OneWay}" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{x:Bind GpuPercentDisplayOrDash, Mode=OneWay}" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="5" VerticalAlignment="Center">
                                    <Button Background="Transparent" BorderThickness="0" Click="OpenProcessLocationButton_Click" CommandParameter="{x:Bind}">
                                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE721;"/>
                                    </Button>
                                    <Button Background="Transparent" BorderThickness="0" Click="KillProcessButton_Click" CommandParameter="{x:Bind}">
                                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE711;"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>
        
        <local:ProcessTemplateSelector x:Key="ProcessTemplateSelector"
                                       LeafTemplate="{StaticResource LeafProcessTemplate}"
                                       ParentTemplate="{StaticResource ParentProcessTemplate}"/>

        <!-- Reusable drive row template for the Storage card -->
        <DataTemplate x:Key="StorageDriveRowTemplate" x:DataType="models:StorageInfo">
            <StackPanel Margin="0,0,0,8" HorizontalAlignment="Stretch">
                <Grid>
                    <TextBlock Text="{x:Bind Name, Mode=OneWay}" FontWeight="SemiBold"/>
                    <TextBlock Text="{x:Bind sys:String.Format('{0:F0}%', Usage), Mode=OneWay}" Foreground="#F0B030" HorizontalAlignment="Right"/>
                </Grid>
                <ProgressBar Value="{x:Bind Usage, Mode=OneWay}" Height="2" Margin="0,4,0,0" Background="#2A2C36">
                    <ProgressBar.Foreground>
                        <SolidColorBrush Color="#F0B030"/>
                    </ProgressBar.Foreground>
                </ProgressBar>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <ScrollViewer> 
        <Grid Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- System Info Cards -->
            <Grid Grid.Row="0" ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- CPU and RAM Card -->
                <Border Grid.Column="0" Background="{StaticResource App.CardGradientBrush}" CornerRadius="10" Padding="16" BorderBrush="{StaticResource App.CardBorder}" BorderThickness="1">
                    <StackPanel>
                        <!-- CPU section -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.Column="0" FontFamily="Segoe Fluent Icons" Glyph="&#xE950;" Foreground="#3090F0" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="CPU" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{x:Bind sys:String.Format('{0:F1}%', ViewModel.Cpu.Usage), Mode=OneWay}" Foreground="#3090F0" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock Text="{x:Bind ViewModel.Cpu.Name, Mode=OneWay}" Opacity="0.5" FontSize="12" Margin="0,4,0,0"/>
                        <ProgressBar Value="{x:Bind ViewModel.Cpu.Usage, Mode=OneWay}" Maximum="100" Height="4" Margin="0,8,0,0" Background="#2A2C36">
                            <ProgressBar.Foreground>
                                <SolidColorBrush Color="#3090F0"/>
                            </ProgressBar.Foreground>
                        </ProgressBar>
                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Opacity="0.5" FontSize="12" Text="{x:Bind ViewModel.Cpu.CoresAndThreads, Mode=OneWay}"/>
                            <TextBlock Grid.Column="1" Opacity="0.5" FontSize="12" Text="{x:Bind sys:String.Format('{0:F2} GHz', ViewModel.Cpu.CurrentClockGhz), Mode=OneWay}" HorizontalAlignment="Right"/>
                        </Grid>
                        
                        
                        <Rectangle Height="1" Fill="#2A2C36" Margin="0,12,0,0"/>
                        <!-- RAM section -->
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.Column="0" FontFamily="Segoe Fluent Icons" Glyph="&#xE957;" Foreground="#8830F0" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="RAM" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{x:Bind sys:String.Format('{0:F0}%', ViewModel.Ram.Usage), Mode=OneWay}" Foreground="#8830F0" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock Text="{x:Bind ViewModel.Ram.Type, Mode=OneWay}" Opacity="0.5" FontSize="12" Margin="0,4,0,0"/>
                        <ProgressBar Value="{x:Bind ViewModel.Ram.Usage, Mode=OneWay}" Maximum="100" Height="4" Margin="0,8,0,0" Background="#2A2C36">
                            <ProgressBar.Foreground>
                                <SolidColorBrush Color="#8830F0"/>
                            </ProgressBar.Foreground>
                        </ProgressBar>
                        <TextBlock Opacity="0.5" FontSize="12" Margin="0,4,0,0">
                            <Run Text="{x:Bind ViewModel.Ram.UsedAndTotal, Mode=OneWay}"/>
                            <Run Text="  ×  "/>
                            <Run Text="{x:Bind ViewModel.Ram.ModuleConfiguration, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- GPU Card -->
                <Border Grid.Column="1" Background="{StaticResource App.CardGradientBrush}" CornerRadius="10" Padding="16" BorderBrush="{StaticResource App.CardBorder}" BorderThickness="1">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.Column="0" FontFamily="Segoe Fluent Icons" Glyph="&#xEED8;" Foreground="#30F080" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="GPU" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock Text="{x:Bind sys:String.Format('{0} graphics adapters', ViewModel.Gpus.Count), Mode=OneWay}" Opacity="0.5" FontSize="12" Margin="0,4,0,12"/>
                        <ItemsControl ItemsSource="{x:Bind ViewModel.Gpus, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:GpuInfo">
                                    <StackPanel Margin="0,0,0,12">
                                        <Grid>
                                            <TextBlock Text="{x:Bind Name, Mode=OneWay}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{x:Bind sys:String.Format('{0:F0}%', Usage), Mode=OneWay}" Foreground="#30F080" HorizontalAlignment="Right"/>
                                        </Grid>
                                        <ProgressBar Value="{x:Bind Usage, Mode=OneWay}" Maximum="100" Height="4" Margin="0,4,0,0" Background="#2A2C36">
                                            <ProgressBar.Foreground>
                                                <SolidColorBrush Color="#30F080"/>
                                            </ProgressBar.Foreground>
                                        </ProgressBar>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{x:Bind Memory, Mode=OneWay}" Opacity="0.5" FontSize="12" Grid.Column="0"/>
                                            <TextBlock Text="{x:Bind sys:String.Format('{0}°C', Temperature), Mode=OneWay}" Opacity="0.5" FontSize="12" Grid.Column="1" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                <!-- Storage Card -->
                <Border Grid.Column="2" Background="{StaticResource App.CardGradientBrush}" CornerRadius="10" Padding="16" BorderBrush="{StaticResource App.CardBorder}" BorderThickness="1">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.Column="0" FontFamily="Segoe Fluent Icons" Glyph="&#xE8B7;" Foreground="#F0B030" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Storage" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock Text="{x:Bind sys:String.Format('{0} drives', ViewModel.Drives.Count), Mode=OneWay}" Opacity="0.5" FontSize="12" Margin="0,4,0,12"/>

                        <!-- Single-column list (<= threshold) -->
                        <ItemsControl x:Name="SingleColumnDrivesList"
                                      ItemsSource="{x:Bind ViewModel.Drives, Mode=OneWay}"
                                      ItemTemplate="{StaticResource StorageDriveRowTemplate}"
                                      x:Load="{x:Bind ViewModel.ShowSingleColumnDrives, Mode=OneWay}"/>

                        <!-- Two-column layout (>= threshold): optional full-width system drive on top, others split -->
                        <StackPanel x:Name="TwoColumnDrivesPanel" x:Load="{x:Bind ViewModel.ShowTwoColumnDrives, Mode=OneWay}">
                            <!-- System drive full-width (only for 5+ drives) -->
                            <ContentControl x:Name="SystemDriveFullRow"
                                            Content="{x:Bind ViewModel.SystemDrive, Mode=OneWay}"
                                            ContentTemplate="{StaticResource StorageDriveRowTemplate}"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            x:Load="{x:Bind ViewModel.ShowSystemDriveFullRow, Mode=OneWay}"/>
                            <!-- Remaining drives in two columns -->
                            <Grid ColumnSpacing="16" Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ItemsControl Grid.Column="0"
                                              ItemsSource="{x:Bind ViewModel.DrivesLeft, Mode=OneWay}"
                                              ItemTemplate="{StaticResource StorageDriveRowTemplate}"/>
                                <ItemsControl Grid.Column="1"
                                              ItemsSource="{x:Bind ViewModel.DrivesRight, Mode=OneWay}"
                                              ItemTemplate="{StaticResource StorageDriveRowTemplate}"/>
                            </Grid>
                        </StackPanel>

                        <!-- Top disk process line -->
                        <TextBlock Margin="0,6,0,0" Text="{x:Bind ViewModel.Storage.TopProcess, Mode=OneWay}" FontSize="12" Opacity="0.9" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Border>
                
                <!-- Network Card -->
                <Border Grid.Column="3" Background="{StaticResource App.CardGradientBrush}" CornerRadius="10" Padding="16" BorderBrush="{StaticResource App.CardBorder}" BorderThickness="1">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.Column="0" FontFamily="Segoe Fluent Icons" Glyph="&#xE701;" Foreground="#30D0F0" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Network" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Speed" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="↑ Upload " Opacity="0.6"/>
                                    <TextBlock Text="{x:Bind ViewModel.Network.UploadSpeed, Mode=OneWay}" Foreground="#30D0F0" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="↓ Download " Opacity="0.6"/>
                                    <TextBlock Text="{x:Bind ViewModel.Network.DownloadSpeed, Mode=OneWay}" Foreground="#30D0F0" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                            <Canvas Grid.Column="1" Width="60" Height="40">
                                <Polyline Points="{x:Bind ViewModel.Network.UploadHistory, Converter={StaticResource HistoryToPointsConverter}, Mode=OneWay}" Stroke="#30D0F0" StrokeThickness="1" Canvas.Top="0"/>
                                <Polyline Points="{x:Bind ViewModel.Network.DownloadHistory, Converter={StaticResource HistoryToPointsConverter}, Mode=OneWay}" Stroke="#30D0F0" StrokeThickness="1" Canvas.Top="20"/>
                            </Canvas>
                        </Grid>
                        <Rectangle Height="1" Fill="#2A2C36" Margin="0,12,0,0"/>
                        
                        <ItemsControl ItemsSource="{x:Bind ViewModel.Network.TopProcesses, Mode=OneWay}" Margin="0,12,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:NetworkProcessInfo">
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{x:Bind Name, Mode=OneWay}" Grid.Column="0" FontSize="12"/>
                                        <TextBlock Text="{x:Bind Speed, Mode=OneWay}" Grid.Column="1" HorizontalAlignment="Right" Foreground="#30D0F0" FontSize="12"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Top Processes -->
            <TextBlock Grid.Row="1" Text="Top Processes" FontSize="20" FontWeight="SemiBold" Margin="0,24,0,12"/>

            <Border Grid.Row="2" Background="{StaticResource App.CardGradientBrush}" BorderBrush="{StaticResource App.CardBorder}" BorderThickness="1" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Headers with clickable sort and direction chevrons -->
                    <Grid Grid.Row="0" Padding="12" Background="{StaticResource App.CardHeaderBrush}" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Background="Transparent" BorderThickness="0" Padding="0" HorizontalContentAlignment="Left" Click="SortByName_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="Process" FontWeight="SemiBold"/>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="{x:Bind ViewModel.NameSortGlyph, Mode=OneWay}"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="2" Background="Transparent" BorderThickness="0" Padding="0" HorizontalContentAlignment="Left" Click="SortByCpu_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="CPU" FontWeight="SemiBold"/>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="{x:Bind ViewModel.CpuSortGlyph, Mode=OneWay}"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="3" Background="Transparent" BorderThickness="0" Padding="0" HorizontalContentAlignment="Left" Click="SortByRam_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="RAM" FontWeight="SemiBold"/>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="{x:Bind ViewModel.RamSortGlyph, Mode=OneWay}"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="4" Background="Transparent" BorderThickness="0" Padding="0" HorizontalContentAlignment="Left" Click="SortByGpu_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="GPU" FontWeight="SemiBold"/>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="{x:Bind ViewModel.GpuSortGlyph, Mode=OneWay}"/>
                            </StackPanel>
                        </Button>
                        <TextBlock Grid.Column="5" Text="Actions" FontWeight="SemiBold"/>
                    </Grid>
                    
                    <ListView x:Name="processesList" Grid.Row="1" ItemsSource="{x:Bind ViewModel.TopProcesses, Mode=OneWay}" 
                              SelectionMode="None" 
                              ItemTemplateSelector="{StaticResource ProcessTemplateSelector}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#2A2C36"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>




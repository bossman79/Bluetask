<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Bluetask.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bluetask"
    xmlns:ui="using:Microsoft.UI.Xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            <!-- App theme palette to match screenshot -->
            <SolidColorBrush x:Key="App.Background" Color="#0D1117"/>
            <SolidColorBrush x:Key="App.CardBackground" Color="#161B22"/>
            <SolidColorBrush x:Key="App.CardBorder" Color="#2A2C36"/>
            <SolidColorBrush x:Key="App.Text" Color="#FFFFFFFF"/>
            <SolidColorBrush x:Key="App.CpuAccent" Color="#3090F0"/>
            <SolidColorBrush x:Key="App.GpuAccent" Color="#30F080"/>
            <SolidColorBrush x:Key="App.StorageAccent" Color="#F0B030"/>
            <SolidColorBrush x:Key="App.NetworkAccent" Color="#30D0F0"/>
            <SolidColorBrush x:Key="App.RamAccent" Color="#8830F0"/>

            <!-- Subtle gradients for a lighter, modern look -->
            <LinearGradientBrush x:Key="App.GradientBackground" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#141C2A" Offset="0"/>
                <GradientStop Color="#101827" Offset="0.55"/>
                <GradientStop Color="#0D1623" Offset="1"/>
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="App.CardGradientBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E2736" Offset="0"/>
                <GradientStop Color="#182230" Offset="1"/>
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="App.CardHeaderBrush" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#212B3A" Offset="0"/>
                <GradientStop Color="#1B2533" Offset="1"/>
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="App.RowGradientBrush" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#192434" Offset="0"/>
                <GradientStop Color="#172233" Offset="1"/>
            </LinearGradientBrush>

            <!-- Force a solid-blue ToggleSwitch On color without changing templates -->
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="ToggleSwitchCurtainBackgroundThemeBrush" Color="#006BFF"/>
                    <SolidColorBrush x:Key="ToggleSwitchCurtainPointerOverBackgroundThemeBrush" Color="#1A7CFF"/>
                    <SolidColorBrush x:Key="ToggleSwitchCurtainPressedBackgroundThemeBrush" Color="#0054E6"/>
                    <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="#006BFF"/>
                    <SolidColorBrush x:Key="AccentFillColorSecondaryBrush" Color="#338CFF"/>
                    <SolidColorBrush x:Key="AccentFillColorTertiaryBrush" Color="#0054E6"/>
                    <Color x:Key="SystemAccentColor">#FF006BFF</Color>
                    <Color x:Key="SystemAccentColorLight1">#FF338CFF</Color>
                    <Color x:Key="SystemAccentColorLight2">#FF66A9FF</Color>
                    <Color x:Key="SystemAccentColorLight3">#FF99C6FF</Color>
                    <Color x:Key="SystemAccentColorDark1">#FF0057CC</Color>
                    <Color x:Key="SystemAccentColorDark2">#FF0046A3</Color>
                    <Color x:Key="SystemAccentColorDark3">#FF00357A</Color>
                    <Color x:Key="AccentBaseColor">#FF006BFF</Color>
                    <Color x:Key="AccentBaseColorLight1">#FF338CFF</Color>
                    <Color x:Key="AccentBaseColorLight2">#FF66A9FF</Color>
                    <Color x:Key="AccentBaseColorLight3">#FF99C6FF</Color>
                    <Color x:Key="AccentBaseColorDark1">#FF0057CC</Color>
                    <Color x:Key="AccentBaseColorDark2">#FF0046A3</Color>
                    <Color x:Key="AccentBaseColorDark3">#FF00357A</Color>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="ToggleSwitchCurtainBackgroundThemeBrush" Color="#006BFF"/>
                    <SolidColorBrush x:Key="ToggleSwitchCurtainPointerOverBackgroundThemeBrush" Color="#1A7CFF"/>
                    <SolidColorBrush x:Key="ToggleSwitchCurtainPressedBackgroundThemeBrush" Color="#0054E6"/>
                    <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="#006BFF"/>
                    <SolidColorBrush x:Key="AccentFillColorSecondaryBrush" Color="#338CFF"/>
                    <SolidColorBrush x:Key="AccentFillColorTertiaryBrush" Color="#0054E6"/>
                    <Color x:Key="SystemAccentColor">#FF006BFF</Color>
                    <Color x:Key="SystemAccentColorLight1">#FF338CFF</Color>
                    <Color x:Key="SystemAccentColorLight2">#FF66A9FF</Color>
                    <Color x:Key="SystemAccentColorLight3">#FF99C6FF</Color>
                    <Color x:Key="SystemAccentColorDark1">#FF0057CC</Color>
                    <Color x:Key="SystemAccentColorDark2">#FF0046A3</Color>
                    <Color x:Key="SystemAccentColorDark3">#FF00357A</Color>
                    <Color x:Key="AccentBaseColor">#FF006BFF</Color>
                    <Color x:Key="AccentBaseColorLight1">#FF338CFF</Color>
                    <Color x:Key="AccentBaseColorLight2">#FF66A9FF</Color>
                    <Color x:Key="AccentBaseColorLight3">#FF99C6FF</Color>
                    <Color x:Key="AccentBaseColorDark1">#FF0057CC</Color>
                    <Color x:Key="AccentBaseColorDark2">#FF0046A3</Color>
                    <Color x:Key="AccentBaseColorDark3">#FF00357A</Color>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ToggleSwitchCurtainBackgroundThemeBrush" Color="#006BFF"/>
                    <SolidColorBrush x:Key="ToggleSwitchCurtainPointerOverBackgroundThemeBrush" Color="#1A7CFF"/>
                    <SolidColorBrush x:Key="ToggleSwitchCurtainPressedBackgroundThemeBrush" Color="#0054E6"/>
                    <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="#006BFF"/>
                    <SolidColorBrush x:Key="AccentFillColorSecondaryBrush" Color="#338CFF"/>
                    <SolidColorBrush x:Key="AccentFillColorTertiaryBrush" Color="#0054E6"/>
                    <Color x:Key="SystemAccentColor">#FF006BFF</Color>
                    <Color x:Key="SystemAccentColorLight1">#FF338CFF</Color>
                    <Color x:Key="SystemAccentColorLight2">#FF66A9FF</Color>
                    <Color x:Key="SystemAccentColorLight3">#FF99C6FF</Color>
                    <Color x:Key="SystemAccentColorDark1">#FF0057CC</Color>
                    <Color x:Key="SystemAccentColorDark2">#FF0046A3</Color>
                    <Color x:Key="SystemAccentColorDark3">#FF00357A</Color>
                    <Color x:Key="AccentBaseColor">#FF006BFF</Color>
                    <Color x:Key="AccentBaseColorLight1">#FF338CFF</Color>
                    <Color x:Key="AccentBaseColorLight2">#FF66A9FF</Color>
                    <Color x:Key="AccentBaseColorLight3">#FF99C6FF</Color>
                    <Color x:Key="AccentBaseColorDark1">#FF0057CC</Color>
                    <Color x:Key="AccentBaseColorDark2">#FF0046A3</Color>
                    <Color x:Key="AccentBaseColorDark3">#FF00357A</Color>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
